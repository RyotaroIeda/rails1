<h2>スケジュール編集</h2>

<%= form_tag("/posts/#{@post.id}/update") do %>
<div class="schedule_edit">
    <table>
        <tbody>
            <tr>
                <td>タイトル</td>
                <td><input name="title" value="<%= @post.title %>"></td>
            </tr>
            <tr>
                <td>開始日</td>
                <td><input name="start_date" type="date" / value="<%= @post.start_date %>"></td>
            </tr>
            <tr>
                <td>終了日</td>
                <td><input name="end_date" type="date" / value="<%= @post.end_date %>"></td>
            </tr>
            <tr>
                <td>終日</td>
                <td><input name="all_date" type="checkbox" value="<%= @post.all_date %>"><br>終日の場合はチェックを入れます</td>
            </tr>
            <tr>
                <td>スケジュールメモ</td>
                <td><textarea name="text"><%= @post.text %></textarea></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="submit_button">
<input type="submit" value="スケジュールの編集を完了する"><br>
<%= link_to("スケジュール一覧に戻る", "/") %>
<% end %>
</div>