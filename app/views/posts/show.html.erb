<h2>スケジュール詳細</h2>
<div class = "schedule_detail">
    <table>
        <tbody>
            <tr>
                <td>タイトル</td>
                <td><%= @post.title %></td>
            </tr>
            <tr>
                <td>開始日</td>
                <td><%= @post.start_date %></td>
            </tr>
            <tr>
                <td>投稿日時</td>
                <td><%= @post.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
            <tr>
                <td>終日</td>
                <td><%= @post.all_date %></td>
            </tr>
            <tr>
                <td>スケジュールメモ</td>
                <td><%= @post.text %></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="links">
    <%= link_to("スケジュール一覧に戻る", "/") %><br>
    <%= link_to("スケジュールを編集する", "/posts/#{@post.id}/edit") %><br>
    <%= button_to("スケジュールを削除", "/posts/#{@post.id}/destroy") %>
</div>